<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/time_hourly_field"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/weather_hourly_icon"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/time_hourly_field" />

    <TextView
        android:id="@+id/precipitation_hourly_field"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/weather_hourly_icon" />

    <TextView
        android:id="@+id/temperature_hourly_field"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true" />

</RelativeLayout>